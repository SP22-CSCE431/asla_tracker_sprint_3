<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Location</th>
      <th>Time</th>
      <th>Description</th>
      <th>Event Type</th>
      <th colspan="3"></th>
    </tr>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        .hero-background{
            background-image: url("<%= asset_path('bg.jpg') %>");
            background-repeat: no-repeat;
            background-size: auto;
        }
    </style>
  </thead>

  <tbody>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #800000">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"> <h1>TAMU ASLA <%=image_tag("download.jpg", size: "60x60")%> </h1>  </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Home", '/', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "View all members", student_members_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "About", 'pages/about', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Officers", 'pages/officers', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact Us", 'pages/contact', class: 'nav-link' %>
            </li>
            <li class="nav-item">
            <%= link_to "View all business professionals", business_professionals_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
            <%= link_to "Newletters", newsletters_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Events", events_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Calendar", calendars_path, class: 'nav-link' %>
            </li>
            <!-- <li class="nav-item">
              <a class="nav-link" href="#">Gallery</a>
            </li> -->
            <li class="nav-item">
            <%= link_to "Sign in", user_google_oauth2_omniauth_authorize_path, class:'nav-link' %>
            </li>
            <li class="nav-item">
            <%= link_to "Sign Out", destroy_user_session_path, class:'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date.strftime('%B %-d, %Y') %></td>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.start_time.strftime('%H:%M %p')%> - <%=event.finish_time.strftime('%H:%M %p') %></td>
        <td><%= event.description %></td>
        <td><%= event.event_type %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

