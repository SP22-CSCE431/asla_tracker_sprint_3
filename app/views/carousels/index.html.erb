<p id="notice"><%= notice %></p>

<h1>Carousels</h1>

<table>
  <thead>
    <tr>
      <th>Pic name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carousels.each do |carousel| %>
      <tr>
        <td><%= carousel.pic_name %></td>
        <td><%= link_to 'Show', carousel %></td>
        <td><%= link_to 'Edit', edit_carousel_path(carousel) %></td>
        <td><%= link_to 'Delete', carousel, method: :delete, data: { confirm: 'Are you sure you would like to delete the photo: ' + carousel.pic_name + '?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carousel Image', new_carousel_path %>
