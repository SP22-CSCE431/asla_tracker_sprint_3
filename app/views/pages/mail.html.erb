<form action="/pages/mail" method="get" id="mail_form">
  <label for="emails">Enter emails</label><br>
  <input type="text" id="emails" name="emails"><br><br>

  <input type="checkbox" id="group1" name="group1" value="officers">
  <label for="group1">Email officers</label><br>
  <input type="checkbox" id="group2" name="group2" value="non_officers">
  <label for="group2">Email non-officer students</label><br>
  <input type="checkbox" id="group3" name="group3" value="business">
  <label for="group3">Email business professionals</label><br><br>

  <input type="submit" value="Copy Emails">
</form>

<br>
<p id="success"></p>

<% if @recipients_str %>

  <script>
  navigator.clipboard.writeText("<%= @recipients_str %>").then(() =>{

    document.querySelector("#success").innerHTML = "Copied Emails";
  });
  </script>

<% end %>

