<p id="notice"><%= notice %></p>

<h1>Members Event Registration Table</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Member Email</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_student_members.each do |event_student_member| %>
      <tr>
        <td><%= StudentMember.find(event_student_member.member_id).first_name%></td>
        <td><%= StudentMember.find(event_student_member.member_id).email%></td>
        <td><%= Event.find(event_student_member.event_id).name %></td>
        <td><%= link_to 'Show', event_student_member %></td>
        <td><%= link_to 'Edit', edit_event_student_member_path(event_student_member) %></td>
        <td><%= link_to 'Delete', event_student_member, method: :delete, data: { confirm: 'Are you sure you would like to delete this registration entry?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Register a Member for an Event', new_event_student_member_path %>
