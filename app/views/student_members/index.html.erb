</head>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Uin</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Class year</th>
      <th>Join date</th>
      <th>Member title</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Expected graduation date</th>
      <th>Social point amount</th>
      <th>Meeting point amount</th>
      <th>Fundraiser point amount</th>
      <th>Informational point amount</th>
      <th>Officer title</th>
      <th>Dues paid</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #800000">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"> <h1>TAMU ASLA <%=image_tag("download.jpg", size: "60x60")%> </h1>  </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Home", '/', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "View all members", student_members_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "About", 'pages/about', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Officers", 'pages/officers', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact Us", 'pages/contact', class: 'nav-link' %>
            </li>
            <li class="nav-item">
            <%= link_to "View all business professionals", business_professionals_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
            <%= link_to "Newletters", newsletters_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Events", events_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Calendar", calendars_path, class: 'nav-link' %>
            </li>
            <!-- <li class="nav-item">
              <a class="nav-link" href="#">Gallery</a>
            </li> -->
            <li class="nav-item">
            <%= link_to "Sign in", user_google_oauth2_omniauth_authorize_path, class:'nav-link' %>
            </li>
            <li class="nav-item">
            <%= link_to "Sign Out", destroy_user_session_path, class:'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

<h1>Student Members</h1>

    <% @student_members.each do |student_member| %>
      <tr>
        <td><%= student_member.uin %></td>
        <td><%= student_member.first_name %></td>
        <td><%= student_member.last_name %></td>
        <td><%= student_member.class_year %></td>
        <td><%= student_member.join_date %></td>
        <td><%= student_member.member_title %></td>
        <td><%= student_member.email %></td>
        <td><%= student_member.phone_number %></td>
        <td><%= student_member.expected_graduation_date %></td>
        <td><%= student_member.social_point_amount %></td>
        <td><%= student_member.meeting_point_amount %></td>
        <td><%= student_member.fundraiser_point_amount %></td>
        <td><%= student_member.informational_point_amount %></td>
        <td><%= student_member.officer_title %></td>
        <td><%= student_member.dues_paid %></td>
        <td><%= student_member.picture %></td>
        <td><%= student_member.uid %></td>
        <td><%= link_to 'Show', student_member %></td>
        <td><%= link_to 'Edit', edit_student_member_path(student_member) %></td>
        <td><%= link_to 'Destroy', student_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

