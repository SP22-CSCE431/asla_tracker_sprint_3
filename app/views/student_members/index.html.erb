<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Class year</th>
      <th>Email</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </thead>

  <tbody>

<h1>Members</h1>

<%= form_tag :search_student_members, method: :get, class: "search" do %>
  <%= text_field_tag "q", params[:q] %>
  <%= submit_tag "Search" %>
<% end %>

    <% @student_members.each do |student_member| %>
      <tr>
        <td><%= student_member.first_name %></td>
        <td><%= student_member.last_name %></td>
        <td><%= student_member.class_year %></td>
        <td><%= student_member.email %></td>
        <td><%= student_member.member_title %></td>
        <% if session[:isAdmin] %>
          <td><%= link_to 'Show', student_member %></td>
          <td><%= link_to 'Edit', edit_student_member_path(student_member) %></td>
          <td><%= link_to 'Destroy', student_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
